{
    "manifest_version": 3,
    "name": "Transcriptor y Traductor de Mensajes",
    "version": "1.0",
    "description": "Transcripción y traducción en tiempo real para Teams y Google Meet",
    
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    
    "host_permissions": [
      "https://teams.microsoft.com/*",
      "https://meet.google.com/*"
    ],
    
    "background": {
      "service_worker": "background.js"
    },
    
    "content_scripts": [
      {
        "matches": [
          "https://teams.microsoft.com/*",
          "https://meet.google.com/*"
        ],
        "js": ["content.js"],
        "css": ["content.css"],
        "run_at": "document_idle"
      }
    ],
    
    "action": {
      "default_popup": "popup.html",
      "default_title": "Transcriptor de Mensajes"
    },
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    
    "web_accessible_resources": [
      {
        "resources": ["content.css"],
        "matches": ["https://teams.microsoft.com/*", "https://meet.google.com/*"]
      }
    ]
  }